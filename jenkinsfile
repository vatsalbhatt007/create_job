pipeline {
  agent any
  stages {
    stage ('verify') {
      steps {
        script {
          sh ('docker run --rm -i hashicorp/terraform version')
        }
      }
    }
    stage ('select workspace') {
      steps {
        script {
          sh ('docker run --rm -i -v `pwd`:/infra/ -w /infra/ hashicorp/terraform workspace list /infra/')
        }
      }
    }
  }
}
